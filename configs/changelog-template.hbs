{{#each releases}}
  # {{title}}
  [{{niceDate}}]

  {{! list commits with feature: in message, use feature: or Feature: }}
  {{#commit-list
    commits
    heading='### Features'
    message='(feature: )|(Feature: )'
    exclude='(fix: )|(Fix: )|(break: )|(Break: )'}}
    * {{date}} [{{author}}] - {{subject}} ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! use fix: or Fix: }}
  {{#commit-list
    commits
    heading='### Fixes'
    message='(fix: )|(Fix: )'
    exclude='(break: )|(Break: )|(Feature: )|(feature: )'}}
    * {{date}} [{{author}}] - {{subject}} ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! user break: or Break: }}
  {{#commit-list
    commits
    heading='### Breaking changes'
    message='(break: )|(Break: )'
    exclude='(fix: )|(Fix: )|(Feature: )|(feature: )'}}
    * {{date}} [{{author}}] - {{subject}} ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}

  {{! Uncathegorized }}
  {{#commit-list
    commits
    heading='### Other'
    message=''
    exclude='(fix: )|(Fix: )|(Feature: )|(feature: )|(break: )|(Break: )'}}
    * {{date}} [{{author}}] - {{subject}} ([`{{shorthash}}`]({{href}}))
  {{/commit-list}}
{{/each}}
